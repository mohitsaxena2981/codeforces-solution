import java.util.Scanner;
public class Main{
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        int c=0;
        int n=sc.nextInt();
        int t=sc.nextInt();
        int x=t-1;
        int arr[]=new int[n];
        for(int i=0;i<n;i++){
            arr[i]=sc.nextInt();
 
        }
        for(int i=0;i<n;i++){
            if(arr[i]>=arr[x] && arr[i]>0){
                c++;
            }
        }
        System.out.println(c);
    }
}
